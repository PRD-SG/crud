<div class="modal fade" id="createExpense" tabindex="-1" aria-labelledby="createExpenseLabel" aria-hidden="true" data-controller="logs">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title mb-3">Create Expense</h5>
                <%= form_with model: Log.new do |f| %>
                    <div class="d-none">
                        <%= f.text_field :user_id, value: current_user.id %>
                    </div>
                    <div class="form-floating my-2">
                        <%= f.text_field :title, class: "form-control", placeholder: "Title", required: true, autocomplete: "off" %>
                        <%= f.label :title, class: "form-label" %>
                    </div>
                    <div class="form-floating my-2">
                        <%= f.number_field :value, class: "form-control", placeholder: "Value", step: "0.01", min: "0.01" %>
                        <%= f.label :value, class: "form-label" %>
                    </div>
                    <div class="form-floating my-2">
                        <%= f.date_field :date, class: "form-control", placeholder: "Date", value: Time.zone.now %>
                        <%= f.label :date, class: "form-label" %>
                    </div>
                    <div class="my-2">
                        <label class="form-label">Type</label>
                        <div class="row m-0 p-0 border border-1 rounded">
                            <% Log.log_types.each do |key, value| %>
                            <div class="col-6 form-check py-3 d-flex justify-content-center">
                                <%= f.radio_button :log_type, key, class: "form-check-input", checked: value.zero? %>
                                <%= f.label :log_type, key.capitalize, class: "form-check-label ms-2" %>
                            </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="my-2">
                        <label class="form-label">Category</label>
                        <div class="row m-0 p-0 py-3 border border-1 rounded">
                            <% Category.all.each_with_index do |category, index| %>
                                <div class="col-4 form-check d-flex justify-content-center">
                                    <%= f.radio_button :category_id, category.id, class: "form-check-input", checked: index.zero? %>
                                    <%= f.label :category_id, category.name, class: "form-check-label ms-2" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="row">
                            <div class="col-6">
                                <%= f.submit "Create", class: "btn btn-lg btn-dark w-100" %>
                            </div>
                            <div class="col-6">
                                <%= button_tag 'Cancel', type: 'button', class: "btn btn-lg btn-danger w-100", data: { 'bs-dismiss': 'modal' }%>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>