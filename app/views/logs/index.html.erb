<div class="container-fluid g-0" data-controller="logs">
    <div class="row p-4 m-0">
        <div class="col-12 p-0 py-2 m-0">
            <h1 class="m-0">Money Tracking</h1>
        </div>
        <div class="col-12 mt-3 bg-dark body rounded-4 shadow p-4 d-flex align-items-center">
            <div class="row vw-100">
                <div class="col-12 text-light text-center m-0 mb-3">
                    <label class="fs-1">฿ <%= @income - @expenses %></>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <label class="fs-5">InCome</label>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <label class="fs-5">Expenses</label>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <label class="fs-5">฿ <%= @income %></label>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <label class="fs-5">฿ <%= @expenses %></label>
                </div>
            </div>
        </div>
        <div class="col-12 g-0 mt-3">
            <div class="row">
                <div class="btn-group" role="group">
                    <%= link_to new_log_path, class: "btn btn-dark rounded-start-4" do %>
                        <i class="bi bi-plus-circle-dotted fs-3"></i>
                    <% end %>
                    <%= link_to report_logs_path, class: "btn btn-dark rounded-end-4" do %>
                        <i class="bi bi-clipboard-data fs-3"></i>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-12 g-0">
            <div class="row">
                <div class="col-12 d-flex justify-content-between align-items-center mt-4">
                    <h5 class="mt-2">Expenses</h5>
                    <%= link_to "View All", all_logs_path, class: "btn btn-light rounded shadow-sm" %>
                </div>
                <% @logs.each do |date, logs| %>
                    <div class="col-12 my-2">
                        <label><%= date.strftime("%B %d, %Y") %></label>
                        <% logs.each do |log| %>
                            <%= link_to edit_log_path(log) do %>
                                <div class="card shadow-sm my-2">
                                    <div class="card-body">
                                        <span class="float-start"><%= log.title %></span>
                                        <span class="float-end"><%= number_to_currency(log.value, precision: 2) %> </span>
                                    </div>
                                </div>
                            <% end %>
                       <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
