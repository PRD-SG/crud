<div class="container-fluid g-0" data-controller="logs">
    <div class="row p-4 m-0">
        <div class="col-12 p-0 py-2 m-0">
            <h1 class="m-0">Money Tracking</h1>
        </div>
        <div class="col-12 mt-4 bg-dark body rounded-4 shadow p-4 d-flex align-items-center">
            <div class="row vw-100">
                <div class="col-6 text-light text-center">
                    <h3>InCome</h3>
                </div>
                <div class="col-6 text-light text-center">
                    <h3>Expenses</h3>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <h3>฿ <%= @income %></h3>
                </div>
                <div class="col-6 text-light text-center opacity-75">
                    <h3>฿ <%= @expenses %></h3>
                </div>
            </div>
            
        </div>
        <div class="col-12 g-0">
            <div class="row">
                <div class="col-12 mt-4">
                    <button class="btn btn-dark opacity-75 w-100 p-2 rounded-4 shadow p-2" 
                            data-action="click->logs#openDialog"
                            type="button">
                        <i class="bi bi-plus-circle-dotted fs-3"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-12 g-0">
            <div class="row">
                <div class="col-12 d-flex justify-content-between align-items-center mt-4">
                    <h4 class="mt-2">Expenses</h4>
                    <%= link_to "View All", all_logs_path, class: "btn btn-light rounded shadow-sm" %>
                </div>
                <% for log in @logs %>
                    <div class="col-12 d-flex justify-content-between align-items-center mt-4">
                        <div class="d-flex">
                            <button class="btn btn-light rounded shadow-sm px-3"><i class="bi bi-coin fs-4"></i></button>
                            <span class="ms-3 mt-1">
                                <h5 class="m-0 p-0"><%= log.title %> (<%= log.category.name %>)</h5>
                                <p class="opacity-75 m-0 p-0"><%= log.date.strftime("%d/%m/%Y %H:%M") %></p>
                            </span>
                        </div>
                        <h5 class="m-0 p-0">฿ <%= log.value %></h5>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= render "dialog" %>